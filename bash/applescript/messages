#!/bin/bash

# log all account into messages, auto-join rooms
osascript <<EOD
	tell application "Messages"
		
		set aServiceState to status
		
		#if aServiceState is available then
		#	log out
		#end if
		
		if aServiceState is offline then
			log in
		end if
		
		
		repeat with c in chats
			accept c
		end repeat
		
	end tell
EOD
