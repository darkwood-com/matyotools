#!/usr/bin/env php
<?php

require __DIR__.'/../config.php';
require __DIR__.'/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Services\SlackService;

$slackService = new SlackService($configs);

$application = new Application();
$application->add(new Command\AutoJoinCommand($configs));
$application->add(new Command\TacosCommand($configs));
$application->add(new Command\EmojiCommand($slackService));
$application->add(new Command\ReactCommand($slackService));
$application->run();